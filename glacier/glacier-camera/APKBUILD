pkgname=glacier-camera
pkgver=0.1.2_git20181025
pkgrel=0
_commit="ceed1e710f5f1c86b7d3b3953de3d82bfad6e8a0"
pkgdesc="The Glacier camera"
url="https://github.com/nemomobile-ux/glacier-camera"
arch="all"
license="LGPL-2.0-or-later"
depends="nemo-qml-plugin-settings qtquickcontrols-nemo mapplauncherd"
makedepends="cmake qt5-qtbase-dev qt5-qtdeclarative-dev qt5-qttools-dev libglacierapp-dev"
source="https://github.com/nemomobile-ux/glacier-camera/archive/$_commit/glacier-camera-$_commit.tar.gz
	cmake-support.patch
	"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	make -C build
}

package() {
	DESTDIR="$pkgdir" make -C build install
}

