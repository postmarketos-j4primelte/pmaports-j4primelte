pkgname=glacier-music
pkgver=0.2.2_git20200120
pkgrel=0
_commit="3765f3d1f2f346598198259a53c764c0a7ed96f1"
pkgdesc="The Glacier music player"
url="https://github.com/nemomobile-ux/glacier-music"
arch="all"
license="LGPL-2.0-or-later"
depends="nemo-qml-plugin-settings qtquickcontrols-nemo mapplauncherd"
makedepends="cmake qt5-qtbase-dev qt5-qtdeclarative-dev qt5-qtmultimedia-dev libglacierapp-dev taglib-dev"
source="https://github.com/nemomobile-ux/glacier-music/archive/$_commit/glacier-settings-$_commit.tar.gz
	cmake-support.patch
	"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	make -C build
}

package() {
	DESTDIR="$pkgdir" make -C build install
}

