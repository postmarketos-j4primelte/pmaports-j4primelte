pkgname=gsettings-ubuntu-touch-schemas
pkgver=0_git20181006
pkgrel=0
_commit="b3bdf178e4226c91c567b84f1adf9202b2492ca2"
pkgdesc='Collection of GSettings schemas for settings shared by various components of an Ubuntu environment'
arch="noarch"
url="https://github.com/ubports/gsettings-ubuntu-touch-schemas"
license="LGPL-2.1"
makedepends="gnome-common automake autoconf glib-dev intltool"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/gsettings-ubuntu-touch-schemas/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # No tests

build() {
	./autogen.sh \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

