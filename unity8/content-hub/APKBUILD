# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=content-hub
pkgver=0_git20190129
_commit="3f046207beec0441a5e2cd567e63becaafd181eb"
pkgrel=0
pkgdesc="Content sharing/picking infrastructure and service, designed to allow apps to securely and efficiently exchange content"
url="https://github.com/ubports/content-hub"
arch="all"
license="GPL-3.0 LGPL-3.0"
depends_dev="qt5-qtdeclarative-dev ubuntu-app-launch-dev gsettings-qt-dev libnih-dev ubuntu-download-manager-dev libnotify-dev libapparmor-dev ubuntu-ui-toolkit-dev"
makedepends="$depends_dev cmake cmake-extras libapparmor gtest-dev pthread-cancel-noop"
checkdepends="gmock dbus-test-runner xvfb-run"
# Build without crossdirect as long as we need the LD_PRELOAD
options="!check pmb:no-crossdirect" # 92% tests passed, 1 tests failed out of 12
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/$pkgname/archive/$_commit.tar.gz
	0001-Use-qmlplugindump-qt5.patch"
subpackages="$pkgname-dev $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	# Work around QEMU issue with pthread_cancel
	# See https://gitlab.com/postmarketOS/pmaports/issues/190
	LD_PRELOAD=/usr/lib/preload/pthread_cancel_noop.so \
		make -C build
}

check() {
	cd build/tests
	xvfb-run env CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

