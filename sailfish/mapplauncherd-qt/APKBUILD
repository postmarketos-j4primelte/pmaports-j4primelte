pkgname=mapplauncherd-qt
pkgver=1.1.14
_pkgver=$pkgver-2
pkgrel=0
pkgdesc="Qt booster for mapplauncherd"
url="https://git.sailfishos.org/mer-core/mapplauncherd-qt"
arch="all"
license="LGPL-2.0-only"
depends_dev="qt5-qtbase-dev qt5-qtdeclarative-dev mapplauncherd-dev libxml2-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev"
source="https://git.sailfishos.org/mer-core/mapplauncherd-qt/-/archive/$_pkgver/mapplauncherd-qt-$_pkgver.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_pkgver"

build() {
	qmake-qt5
	make
}

package() {
	INSTALL_ROOT="$pkgdir" make install
}

